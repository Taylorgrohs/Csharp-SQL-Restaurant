<!DOCTYPE html>
<html>
  <head>
    <title>Best Restaurant</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h2>Here are all the restaurants in this cuisine type:</h2>
    @if (@Model["restaurants"].Count == 0)
       {
         <p>No restaurants have been added yet!</p>
       }
       else
       {
         <ol>
           @foreach (var restaurant in @Model["restaurants"])
           {
             <li><a href="/restaurant/@restaurant.GetId()">@restaurant.GetName()</a> - @restaurant.GetDescription()  <a href="/restaurant/edit/@restaurant.GetId()">Edit</a> | <a href="/restaurant/delete/@restaurant.GetId()">Delete</a></li>
           }
         </ol>
       }
       <p><a href="/restaurants/new">Add new restaurant</a></p>
       <p><a href="/">Home</a></p>
    </body>
 </html>

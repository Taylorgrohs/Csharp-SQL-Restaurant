<!DOCTYPE html>
<html>
  <head>
    <title>Best Restaurant</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>All Cuisines</h1>
    @if (@Model.Count == 0)
    {
      <p>There are No cuisines.</p>
    }
    <ul>
      @foreach (var cuisine in @Model)
      {
        <li><a href="/cuisines/@cuisine.GetId()">@cuisine.GetName()</a> | <a href="/cuisine/edit/@cuisine.GetId()">Edit</a> | <a href="/cuisine/delete/@cuisine.GetId()">Delete</a></li>
      }
    </ul>
    <p><a href="/cuisines/new">Add new cuisine</a></p>
    <p><a href="/">Home</a></p>
  </body>
</html>

<!DOCTYPE html>
<html>
  <head>
    <title>Best Restaurants</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <h1>Best Restaurants in town!</h1>
    @if (@Model.Count > 0)
    {
      <h2>List of Cuisines:</h2>
      <ul>
        @foreach (var i in @Model)
        <li><a href="/cuisines/@cuisine.GetId()">@i.GetName()</a></li>
    }
      </ul>
    <h4><a href="/categories">View Cuisines</a></h4>
    <h4><a href="/tasks">View Restaurants</a></h4>
  </body>
</html>

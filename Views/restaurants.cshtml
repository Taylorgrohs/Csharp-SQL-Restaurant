<!DOCTYPE html>
<html>
  <head>
    <title>Best Restaurant</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    @if (@Model.Count == 0)
    {
      <p>No restaurants have been added yet!</p>
    }
    else
    {
      <h1>Here is a list of restaurants:</h1>
      <ul>
        @foreach (var restaurant in Model)
        {
          <li>@restaurant.GetName() - @restaurant.GetDescription() | <a href="/restaurant/edit/@restaurant.GetId()">Edit</a> | <a href="/restaurant/delete/@restaurant.GetId()">Delete</a></li>
        }
      </ul>
      <form action="/restaurants/delete" method="post">
        <button type="submit">Clear all Restaurants</button>
      </form>
    }
    <p><a href="/restaurants/new">Add a new Restaurant</a></p>
    <p><a href="/">Return Home</a></p>
  </body>
</html>
